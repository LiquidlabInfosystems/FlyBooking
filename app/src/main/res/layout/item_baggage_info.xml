<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_vertical" >

             <TextView
                 android:id="@+id/tv_flight_number"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="5dp"
                 android:fontFamily="sans-serif-light"
                 android:text="Cathay Padific kjhfkjcehwdfkjewc"
                 android:textColor="@android:color/black"
                 android:textSize="12sp" />

             <TextView
                 android:id="@+id/tv_baggage_info_adult"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="2dp"
                 android:fontFamily="sans-serif-light"
                 android:text="Adult: 20kg"
                 android:textColor="@android:color/black"
                 android:textSize="12sp" />

             <TextView
                 android:id="@+id/tv_baggage_info_child"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="2dp"
                 android:fontFamily="sans-serif-light"
                 android:text="Child: 20kg"
                 android:textColor="@android:color/black"
                 android:textSize="12sp"
                 android:visibility="gone" />

             <TextView
                 android:id="@+id/tv_baggage_info_infant"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="2dp"
                 android:fontFamily="sans-serif-light"
                 android:text="Infant: 20kg"
                 android:textColor="@android:color/black"
                 android:textSize="12sp"
                 android:visibility="gone" />
         </LinearLayout>

</LinearLayout>
